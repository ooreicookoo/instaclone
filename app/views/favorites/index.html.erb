<h3>お気に入り一覧</h3>
<%= notice %>
  <% @favorites.each do |favorite| %>
  <div class="content">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= image_tag(favorite.feed.image.url, size: '400x400', class:"panel-body.picture")  if favorite.feed.image.present?%>
      <ul>
        <div class="icon_size">
          <li><%= image_tag(@user.icon.url, size: '50x50') %><%= favorite.feed.user.name %></li>
        </div>
      </ul>
      <div class="favorite_content">
        <%= favorite.feed.content %>
      </div>
    </div>
  </div>
</div>
<% end %>
