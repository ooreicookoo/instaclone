<% if logged_in? %>
<h1>編集画面</h1>
<%= form_with(model: @user, local: true) do |f| %>
  <div class="form-group">
      <%= f.label :icon, 'プロフィール写真の変更', class: "control-label" %>
      <div class="custom-file">
         <%= f.file_field :icon, class: "form-control file custom-file-input" %>
         <label class="custom-file-label" for="inputFile" data-browse="参照" >ファイルを選択(ここにドロップすることもできます)</label>
      </div>
  </div>
  <%= f.label :名前 %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :自己紹介 %>
  <%= f.text_area :content %>

  <%= f.label :パスワード %>
  <%= f.password_field :password %>
  <%= f.label :パスワード（確認） %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "更新する" %>
<% end %>
<% end %>
