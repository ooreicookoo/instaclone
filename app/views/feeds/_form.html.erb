<%= form_with(model: @feed, local: true, url:choose_new_or_edit) do |form| %>
  <% if @feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= @feed.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @feed.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <p><%= form.label :content, 'コメント', class: "control-label" %></p>
    <%= form.text_area :content, placeholder: 'キャプションを書く', class: "form-control" %>
  </div>
  <div class="form-group">
    <p><%= form.label :写真を選択, class: "control-label" %></p>
    <%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %>
  </div>
  <div class="form-group">
    <%= form.file_field :image, class: "control-label" %>
    <%= form.hidden_field :image_cache, class: "form-control" %>
  </div>
  <div class="actions">
    <input type="submit" name="commit" value="シェア" data-disable-with="シェア">
  </div>
<% end %>
